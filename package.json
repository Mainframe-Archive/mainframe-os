{
  "name": "mainframe-os",
  "author": "Mainframe Group, Inc",
  "description": "A platform for decentralized apps",
  "version": "0.4.0",
  "main": "src/main/index.js",
  "respository": "github:MainframeHQ/mainframe-os",
  "license": "MIT",
  "scripts": {
    "compile": "NODE_ENV=development electron-webpack",
    "compile:preload": "webpack --config ./build/webpack.preload.js",
    "deps:build": "electron-builder install-app-deps",
    "deps:clean": "del-cli ./node_modules",
    "deps:flow": "flow-typed install --ignoreDeps dev",
    "dev": "electron-webpack dev",
    "dist:ci": "yarn run compile && electron-builder --dir",
    "dist": "yarn run compile && electron-builder",
    "dist:dir": "yarn run dist --dir -c.compression=store -c.mac.identity=null",
    "dist:electron": "electron-builder",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "yarn run lint --fix",
    "release": "yarn run compile && electron-builder",
    "relay:build": "BABEL_ENV=script node -r @babel/register ./scripts/build-graphql-schema",
    "relay:compile": "relay-compiler --src ./src --schema ./src/schema.graphql",
    "relay": "yarn run relay:build && yarn run relay:compile",
    "svg": "svgr -d ./src/renderer/UIComponents/Icons ./src/assets/svgs --icon --replace-attr-values \"#D3D3D3=currentColor\"",
    "test:types": "flow check",
    "test": "mocha"
  },
  "electronWebpack": {
    "whiteListedModules": [
      "@mainframe/eth",
      "@mainframe/rpc-electron",
      "@morpheus-ui/core",
      "@morpheus-ui/fonts",
      "react-relay",
      "react-router",
      "typeface-ibm-plex-mono"
    ],
    "renderer": {
      "webpackConfig": "./build/webpack.renderer.additions.js"
    }
  },
  "resolutions": {
    "leveldown": "^5.2.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@erebos/api-bzz-node": "^0.9.0",
