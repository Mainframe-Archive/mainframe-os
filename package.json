{
  "name": "js-mainframe",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": ["packages/*", "applications/*"],
    "nohoist": [
      "**/@erebos/*",
      "**/@mainframe/rpc-*",
      "**/@mainframe/secure-file",
      "**/@mainframe/transport-*",
      "**/@mainframe/utils-*",
      "**/app-builder-lib",
      "**/create-react-class",
      "**/electron",
      "**/electron-better-ipc",
      "**/electron-builder",
      "**/electron-webpack",
      "**/eslint**",
      "**/es6-error",
      "**/fastest-validator",
      "**/form-data",
      "**/fs-extra",
      "**/multibase",
      "**/nanoid",
      "**/node-fetch",
      "**/oboe",
      "**/react",
      "**/react-dom",
      "**/read-config-file",
      "**/react-native-web",
      "**/rx-socket",
      "**/rxjs",
      "**/sodium-universal",
      "**/tar-fs",
      "**/tar-stream",
      "**/uri-js",
      "**/web3-utils",
      "**/web3-eth-abi",
      "**/webpack",
      "**/webpack-dev-server",
      "**/ws"
    ]
  },
  "scripts": {
    "flow:create-symlinks": "flow-mono create-symlinks .flowconfig",
    "flow:install-types": "flow-mono install-types --overwrite --ignoreDeps=dev",
    "flow:reinstall": "lerna exec del flow-typed && yarn flow:install-types",
    "flow:align": "flow-mono align-versions",
    "flow:bootstrap": "yarn flow:create-symlinks && yarn flow:install-types",
    "bootstrap": "lerna bootstrap && yarn flow:bootstrap",
    "lint": "eslint packages/*/src packages/*/__tests__",
    "lint:fix": "yarn lint --fix",
    "test:unit": "BABEL_ENV=test jest --config jest.config.js",
    "test:ci": "BABEL_ENV=test jest --ci --config jest.config.ci.js --runInBand",
    "test:types": "lerna run test:types",
    "test": "yarn lint && yarn test:types && yarn test:unit",
    "build": "lerna run build && lerna run build:sdk && lerna run build:app",
    "start": "yarn build && yarn test"
  },
  "resolutions": {
    "esm": "3.0.84"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.6.0",
    "eslint-config-mainframe": "^2.1.0",
    "flow-bin": "^0.81.0",
    "flow-copy-source": "^2.0.1",
    "flow-mono-cli": "^1.4.0",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.4.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.0.0",
    "lerna": "^3.4.0",
    "prettier": "^1.14.3"
  }
}
