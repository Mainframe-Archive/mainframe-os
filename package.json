    "@erebos/timeline": "^0.9.0",
    "@ledgerhq/hw-app-eth": "^4.70.0",
    "@ledgerhq/hw-transport-node-hid": "^4.70.0",
    "@mainframe/eth": "^0.4.1",
    "@mainframe/rpc-electron": "^0.2.0",
    "@mainframe/rpc-handler": "^0.3.0",
    "@mainframe/utils-crypto": "^0.4.0",
    "@morpheus-ui/core": "^0.0.45",
