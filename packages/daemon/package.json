    "ethereumjs-util": "^6.1.0",
    "ethereumjs-wallet": "^0.6.2",
    "ethers": "^4.0.27",
    "ethjs-unit": "^0.1.6",
    "fs-extra": "^7.0.0",
    "graphql": "^14.1.1",
    "graphql-relay": "^0.6.0",
    "multibase": "^0.6.0",
    "oboe": "^2.1.4",
    "rxjs": "^6.3.3",
    "semver": "^6.0.0",
    "web3-utils": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.21.3",
    "babel-plugin-inline-json-import": "^0.3.2",
    "del-cli": "^1.1.0",
    "flow-bin": "^0.95.1"
  }
