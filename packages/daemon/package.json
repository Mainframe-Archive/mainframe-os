{
  "name": "@mainframe/daemon",
  "version": "0.1.0",
  "main": "lib/index.js",
  "license": "MIT",
  "bin": {
    "mainframe-daemon": "./bin/run"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "oclif": {
    "commands": "./lib/cli/commands",
    "bin": "mainframe-daemon",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "clean": "del lib",
    "build:js": "babel src --out-dir lib",
    "build:flow": "flow-copy-source src lib",
    "build": "yarn clean && yarn build:js && yarn build:flow",
    "test:types": "flow check",
    "test:unit": "jest",
    "start": "node -r esm lib"
  },
  "dependencies": {
    "@mainframe/app-manifest": "*",
    "@mainframe/app-permissions": "*",
    "@mainframe/client": "*",
    "@mainframe/config": "*",
    "@mainframe/data-types": "*",
    "@mainframe/rpc-error": "^0.2.1",
    "@mainframe/rpc-handler": "^0.2.1",
    "@mainframe/rpc-stream": "^0.2.4",
    "@mainframe/rpc-ws-node": "^0.2.3",
    "@mainframe/secure-file": "^0.1.0",
    "@mainframe/utils-base64": "^0.1.0",
    "@mainframe/utils-crypto": "^0.2.1",
    "@mainframe/utils-hex": "^0.1.1",
    "@mainframe/utils-id": "^0.1.0",
    "@oclif/command": "^1.5.0",
    "@oclif/config": "^1.7.4",
    "@oclif/plugin-help": "^2.1.1",
    "debug": "^4.0.0",
    "erebos-api-bzz-node": "^0.3.5",
    "erebos-api-pss": "^0.3.1",
    "esm": "3.0.82",
    "fs-extra": "^7.0.0",
    "multibase": "^0.5.0",
    "rxjs": "^6.3.2",
    "web3": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "flow-bin": "^0.80.0"
  }
}
