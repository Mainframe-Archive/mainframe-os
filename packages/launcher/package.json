{
  "name": "Mainframe",
  "version": "0.2.0",
  "main": "main/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "npm run compile && electron-builder",
    "electron-builder": "electron-builder",
    "dist:ci": "yarn run compile && yarn run electron-builder --dir",
    "dist:dir": "yarn run dist --dir -c.compression=store -c.mac.identity=null",
    "dist:electron": "electron-builder",
    "build:flow": "flow-copy-source src lib",
    "relay": "relay-compiler --src ./src --schema ./schema.graphql",
    "svg": "npx @svgr/cli -d ./src/renderer/UIComponents/Icons ./src/assets/svgs --icon --replace-attr-values \"#D3D3D3=currentColor\"",
    "test:types": "flow check",
    "test": "mocha"
  },
  "electronWebpack": {
    "title": "Mainframe",
    "whiteListedModules": [
      "@mainframe/app-manifest",
      "@mainframe/app-permissions",
      "@mainframe/client",
      "@mainframe/eth",
      "@mainframe/config",
      "@mainframe/toolbox",
      "@morpheus-ui/core",
      "@morpheus-ui/fonts",
      "typeface-ibm-plex-mono"
    ],
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "dependencies": {
    "@erebos/secp256k1": "^0.6.0",
    "@mainframe/app-manifest": "^0.2.0",
    "@mainframe/app-permissions": "^0.2.0",
    "@mainframe/client": "^0.2.0",
    "@mainframe/config": "^0.2.0",
    "@mainframe/eth": "^0.2.0",
    "@mainframe/rpc-electron": "^0.1.0",
    "@mainframe/rpc-handler": "^0.2.1",
    "@mainframe/toolbox": "*",
    "@mainframe/utils-base64": "^0.1.1",
    "@mainframe/utils-id": "^0.1.0",
    "@morpheus-ui/core": "0.0.30",
    "@morpheus-ui/fonts": "0.0.1",
    "@morpheus-ui/icons": "0.0.16",
    "electron-store": "^2.0.0",
    "electron-util": "^0.11.0",
    "get-stream": "^4.1.0",
    "gsap": "^2.1.1",
    "mime": "^2.4.0",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.3",
    "react-art": "^16.8.3",
    "react-blockies": "^1.4.0",
    "react-dom": "^16.8.3",
    "react-modal": "^3.6.1",
    "react-native-web": "^0.10.0",
    "react-relay": "^1.7.0",
    "relay-runtime": "^1.7.0",
    "rxjs": "^6.3.3",
    "source-map-support": "^0.5.9",
    "typeface-ibm-plex-mono": "^0.0.61",
    "web3-eth-abi": "^1.0.0-beta.36",
    "web3-utils": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@erebos/api-bzz-node": "^0.6.2",
    "@mainframe/utils-id": "^0.1.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-react-native-web": "^0.10.0",
    "babel-plugin-relay": "^1.7.0",
    "css-loader": "^2.0.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.2",
    "electron-webpack": "^2.6.1",
    "file-loader": "^3.0.1",
    "flow-bin": "^0.93.0",
    "graphql": "^14.1.1",
    "mocha": "^6.0.2",
    "relay-compiler": "^1.7.0",
    "spectron": "^5.0.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6"
  }
}
