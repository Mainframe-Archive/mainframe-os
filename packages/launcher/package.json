{
  "name": "Mainframe",
  "version": "0.1.0",
  "main": "main/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:ci": "yarn compile && yarn electron-builder -l --dir",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "dist:electron": "electron-builder",
    "build:flow": "flow-copy-source src lib",
    "test:types": "flow check",
    "test": "mocha"
  },
  "electronWebpack": {
    "title": "Mainframe",
    "whiteListedModules": [
      "@mainframe/app-manifest",
      "@mainframe/app-permissions",
      "@mainframe/client",
      "@mainframe/config",
      "@mainframe/toolbox"
    ]
  },
  "dependencies": {
    "@mainframe/app-manifest": "*",
    "@mainframe/app-permissions": "*",
    "@mainframe/client": "*",
    "@mainframe/config": "*",
    "@mainframe/rpc-electron": "^0.1.0",
    "@mainframe/rpc-handler": "^0.2.1",
    "@mainframe/toolbox": "*",
    "@mainframe/utils-id": "^0.1.0",
    "electron-util": "^0.9.1",
    "react": "^16.5.2",
    "react-art": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-modal": "^3.4.5",
    "react-native-web": "^0.9.0",
    "rxjs": "^6.3.2",
    "source-map-support": "^0.5.9",
    "web3-eth-abi": "^1.0.0-beta.36",
    "web3-eth-contract": "^1.0.0-beta.36",
    "web3-utils": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@mainframe/utils-id": "^0.1.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-react-native-web": "^0.9.0",
    "electron": "^2.0.10",
    "electron-builder": "^20.28.4",
    "electron-webpack": "^2.3.1",
    "erebos-api-bzz-node": "^0.3.5",
    "flow-bin": "^0.81.0",
    "mocha": "^5.2.0",
    "spectron": "^4.0.0",
    "webpack": "^4.19.1"
  }
}
