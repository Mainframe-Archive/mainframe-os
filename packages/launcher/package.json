    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@erebos/api-bzz-node": "^0.5.0",
    "@mainframe/utils-id": "^0.1.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-react-native-web": "^0.9.1",
    "electron": "^3.0.9",
    "electron-builder": "^20.28.4",
    "electron-webpack": "^2.3.1",
    "file-loader": "^2.0.0",
    "flow-bin": "^0.86.0",
    "mocha": "^5.2.0",
    "spectron": "^5.0.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.20.2"
