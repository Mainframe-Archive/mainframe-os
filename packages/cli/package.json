{
  "name": "@mainframe/cli",
  "description": "Mainframe CLI",
  "version": "0.1.0",
  "author": "Mainframe",
  "license": "MIT",
  "main": "lib/index.js",
  "bin": {
    "mainframe": "./bin/run"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "oclif": {
    "commands": "./lib/commands",
    "bin": "mainframe",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "clean": "del lib",
    "build:js": "babel src --out-dir lib",
    "build:flow": "flow-copy-source src lib",
    "build": "npm run clean && npm run build:js && npm run build:flow",
    "test:types": "flow check"
  },
  "dependencies": {
    "@mainframe/client": "*",
    "@mainframe/config": "*",
    "@mainframe/toolbox": "*",
    "@oclif/command": "^1.5.2",
    "@oclif/config": "^1.8.4",
    "@oclif/plugin-help": "^2.1.2",
    "cli-table": "^0.3.1",
    "inquirer": "^6.2.0",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "flow-bin": "^0.86.0"
  }
}
