{
  "name": "@mainframe/cli",
  "description": "Mainframe CLI",
  "version": "0.2.0",
  "author": "Mainframe",
  "license": "MIT",
  "main": "lib/index.js",
  "bin": {
    "mainframe": "./bin/run"
  },
  "files": [
    "/bin",
    "/lib",
    "oclif.manifest.json"
  ],
  "oclif": {
    "commands": "./lib/commands",
    "bin": "mainframe",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "clean": "del-cli lib",
    "build:js": "babel src --out-dir lib",
    "build:flow": "flow-copy-source src lib",
    "build": "npm run clean && npm run build:js && npm run build:flow",
    "test:types": "flow check",
    "prepublishOnly": "oclif-dev manifest",
    "postpublish": "del-cli oclif.manifest.json"
  },
  "dependencies": {
    "@mainframe/client": "*",
    "@mainframe/config": "*",
    "@mainframe/toolbox": "*",
    "@oclif/command": "^1.5.2",
    "@oclif/config": "^1.8.4",
    "@oclif/plugin-help": "^2.1.2",
    "cli-table": "^0.3.1",
    "get-port": "^4.0.0",
    "graphql": "^0.13.2",
    "inquirer": "^6.2.1",
    "micro": "^9.3.3",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.21.0",
    "del-cli": "^1.1.0",
    "flow-bin": "^0.87.0"
  }
}
